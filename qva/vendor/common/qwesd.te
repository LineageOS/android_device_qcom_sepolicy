# qwesd - Wireless Edge Service Daemon
type qwesd, domain, mlstrustedsubject;
type qwesd_exec, exec_type, vendor_file_type, file_type;

init_daemon_domain(qwesd)

# Allow access to smcinvoke device
allow qwesd smcinvoke_device:chr_file rw_file_perms;

# Allow qwesd to create sockets for HTTP
allow qwesd self:udp_socket create_socket_perms;

# Allow read-only access to firmware/image
allow qwesd vendor_firmware_file:dir r_dir_perms;
allow qwesd vendor_firmware_file:file r_file_perms;

# Allow qwesd to write state information to /data/vendor/qwes/qwesd.conf
allow qwesd vendor_qwes_data_file:dir rw_dir_perms;
allow qwesd vendor_qwes_data_file:file rw_file_perms;

# Allow access to qipcrtr_socket
# Remove this when QMI service moves to pfmd
allow qwesd self:qipcrtr_socket create_socket_perms_no_ioctl;
