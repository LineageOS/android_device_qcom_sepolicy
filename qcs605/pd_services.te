type pd_mapper, domain;

type pd_mapper_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(pd_mapper);

#Needed to read the json files from /firmware
allow pd_mapper firmware_file:dir r_dir_perms;
allow pd_mapper firmware_file:file r_file_perms;

#Needed to use qmi
allow pd_mapper self:socket create_socket_perms;
allowxperm pd_mapper self:socket ioctl msm_sock_ipc_ioctls;
allow pd_mapper self:capability { setpcap setuid setgid net_bind_service };
allow pd_mapper smem_log_device:chr_file rw_file_perms;
qmux_socket(pd_mapper);

allow pd_mapper sysfs:file r_file_perms;
allow pd_mapper sysfs_data:file r_file_perms;
allow pd_mapper system_file:dir r_dir_perms;

#Allow pd-mapper to write error strings from non-hlos side to kmsg
allow pd_mapper kmsg_device:chr_file w_file_perms;
